<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="1000px">

    <LinearLayout
        android:id="@+id/activity_main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/spaceRow1"
            android:layout_width="413dp"
            android:layout_height="112dp">

            <Button
                android:id="@+id/btnSpace1"
                android:layout_width="135dp"
                android:layout_height="115dp"
                android:background="@android:drawable/btn_default"
                android:shadowColor="#00D33838"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnSpace2"
                android:layout_width="135dp"
                android:layout_height="115dp"
                android:background="@android:drawable/btn_default"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnSpace3"
                android:layout_width="135dp"
                android:layout_height="115dp"
                android:background="@android:drawable/btn_default"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:id="@+id/spaceRow2"
            android:layout_width="402dp"
            android:layout_height="112dp">

            <Button
                android:id="@+id/btnSpace4"
                android:layout_width="135dp"
                android:layout_height="115dp"
                android:background="@android:drawable/btn_default"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnSpace5"
                android:layout_width="135dp"
                android:layout_height="115dp"
                android:background="@android:drawable/btn_default"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnSpace6"
                android:layout_width="135dp"
                android:layout_height="115dp"
                android:background="@android:drawable/btn_default"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:id="@+id/spaceRow3"
            android:layout_width="400dp"
            android:layout_height="112dp">

            <Button
                android:id="@+id/btnSpace7"
                android:layout_width="135dp"
                android:layout_height="115dp"
                android:background="@android:drawable/btn_default"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnSpace8"
                android:layout_width="135dp"
                android:layout_height="115dp"
                android:background="@android:drawable/btn_default"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnSpace9"
                android:layout_width="135dp"
                android:layout_height="115dp"
                android:background="@android:drawable/btn_default"
                android:textSize="30sp" />
        </TableRow>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnNewGame"
            style="@android:style/MediaButton"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@android:drawable/btn_default"
            android:fontFamily="@font/ubuntu_bold"
            android:text="@string/newGameButtonText"
            android:textSize="18sp" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

        <TextView
            android:id="@+id/playerTurnDisplay"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:fontFamily="@font/ubuntu_bold"
            android:text="Player 1's Turn (X)"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

    </LinearLayout>



</ScrollView>