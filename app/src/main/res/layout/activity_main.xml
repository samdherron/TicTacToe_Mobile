<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7C596BFF"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="59dp" />

    <TableRow
        android:id="@+id/spaceRow1"
        android:layout_width="match_parent"
        android:layout_height="112dp">

        <Button
            android:id="@+id/btnSpace1"
            android:layout_width="135dp"
            android:layout_height="115dp"
            android:background="@android:drawable/btn_default"
            android:shadowColor="#00D33838"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnSpace2"
            android:layout_width="135dp"
            android:layout_height="115dp"
            android:background="@android:drawable/btn_default"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnSpace3"
            android:layout_width="135dp"
            android:layout_height="115dp"
            android:background="@android:drawable/btn_default"
            android:textSize="30sp" />

    </TableRow>

    <TableRow
        android:id="@+id/spaceRow2"
        android:layout_width="match_parent"
        android:layout_height="112dp">

        <Button
            android:id="@+id/btnSpace4"
            android:layout_width="135dp"
            android:layout_height="115dp"
            android:background="@android:drawable/btn_default"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnSpace5"
            android:layout_width="135dp"
            android:layout_height="115dp"
            android:background="@android:drawable/btn_default"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnSpace6"
            android:layout_width="135dp"
            android:layout_height="115dp"
            android:background="@android:drawable/btn_default"
            android:textSize="30sp" />

    </TableRow>

    <TableRow
        android:id="@+id/spaceRow3"
        android:layout_width="match_parent"
        android:layout_height="112dp">

        <Button
            android:id="@+id/btnSpace7"
            android:layout_width="135dp"
            android:layout_height="115dp"
            android:background="@android:drawable/btn_default"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnSpace8"
            android:layout_width="135dp"
            android:layout_height="115dp"
            android:background="@android:drawable/btn_default"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnSpace9"
            android:layout_width="135dp"
            android:layout_height="115dp"
            android:background="@android:drawable/btn_default"
            android:textSize="30sp" />
    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <Button
        android:id="@+id/btnNewGame"
        style="@android:style/MediaButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@android:drawable/btn_default"
        android:fontFamily="@font/ubuntu_bold"
        android:text="@string/newGameButtonText"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="19dp" />

    <TextView
        android:id="@+id/playerTurnDisplay"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:fontFamily="@font/ubuntu_bold"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/player2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>